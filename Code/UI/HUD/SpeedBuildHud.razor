@using Sandbox.UI;
@inherits PanelComponent
<root>
    <GameTimer class="@(HasTimer ? "" : "hidden")" @ref=timer TimerEnd=@(TimerEnd) TotalTime=@(TotalTime) />
    <div @ref=message class="message @(string.IsNullOrWhiteSpace(Message) ? "hidden" : "")">@(Message)</div>

    <div id="score" class="@(VoxelPlayer.LocalPlayer.TotalBlockArea == 0 ? "hidden" : "")">
        <div class="goodbar"></div>
        <div class="badbar"></div>
        <div class="failPointer @(KillPercentage.HasValue ? "" : "hidden")">ðŸ’€</div>
        @((int)(100 * VoxelPlayer.LocalPlayer.CorrectBlocksPlaced / System.Math.Max(1,
                VoxelPlayer.LocalPlayer.TotalBlockArea)))%
    </div>

    <div class="readyCheck @(HasReadyCheck ? "" : "hidden") @(VoxelPlayer.LocalPlayer.IsReady ? "Ready" : "")">
        <Image class="key" Texture=@Input.GetGlyph("use", InputGlyphSize.Small, true)>
            @(VoxelPlayer.LocalPlayer.IsReady ? "Ready" : "Not Ready")
    </div>
</root>
